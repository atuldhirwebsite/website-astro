---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import blackAndWhite from '../images/landing-page/black-and-white.JPG';
import buddhas from '../images/landing-page/buddhas.JPG';
import landscape from '../images/landing-page/landscape.JPG';
import jyotigramaya from '../images/landing-page/jyotigramaya.JPG';
import noviceMonks from '../images/landing-page/novice-monks.JPG';
import templeArt from '../images/landing-page/temple-art.JPG';
---

<Layout title="Atul Dhir | Photography">
	<main>
		<div class="container mx-auto p-8">
			<div class="relative grid grid-cols-3 gap-4">
				<div class="col-span-1">
					<div class="sticky top-0 h-screen flex flex-col justify-center p-12">
						<div class="flex flex-col gap-3">
							<h1 class="text-7xl font-satoshi">Atul&nbsp;Dhir</h1>
							<span class="tracking-wider text-lg uppercase font-satoshi text-gray-400">Photographer</span>
						</div>
						<nav class="flex flex-row gap-3 mt-32">
							<a href="/photography" class="text-lg ">Photography</a>
							<span class="text-lg ">/</span>
							<a href="/books" class="text-lg ">Books</a>
							<span class="text-lg ">/</span>
							<a href="/travel" class="text-lg ">Travel</a>
						</nav>
					</div>
				</div>
				<div class="col-span-2 columns-1 gap-5 lg:gap-8 sm:columns-2 [&>div:not(:first-child)]:mt-5 lg:[&>div:not(:first-child)]:mt-8">
					<div class="group relative overflow-hidden flex flex-col items-center justify-center">
						<Image src={blackAndWhite} class="w-full h-auto group-hover:blur-xl duration-300" alt=""/>
						<div class="absolute flex flex-col gap-2 items-center justify-center translate-y-10 group-hover:translate-y-0 duration-300 opacity-0 group-hover:opacity-100">
							<span class="font-satoshi text-white text-3xl">
								Black and White
							</span>
							<span class="font-satoshi text-white text-xl">
								2019
							</span>
						</div>
					</div>
					<div class="group relative overflow-hidden flex flex-col items-center justify-center">
						<Image src={buddhas} class="w-full h-auto group-hover:blur-xl duration-300" alt=""/>
						<div class="absolute flex flex-col gap-2 items-center justify-center translate-y-10 group-hover:translate-y-0 duration-300 opacity-0 group-hover:opacity-100">
							<span class="font-satoshi text-white text-3xl">
								Buddhas
							</span>
							<span class="font-satoshi text-white text-xl">
								2013
							</span>
						</div>
					</div>
					<div class="group relative overflow-hidden flex flex-col items-center justify-center">
						<Image src={landscape} class="w-full h-auto group-hover:blur-xl duration-300" alt=""/>
						<div class="absolute flex flex-col gap-2 items-center justify-center translate-y-10 group-hover:translate-y-0 duration-300 opacity-0 group-hover:opacity-100">
							<span class="font-satoshi text-white text-3xl">
								Landscape
							</span>
							<span class="font-satoshi text-white text-xl">
								2012
							</span>
						</div>
					</div>
					<div class="group relative overflow-hidden flex flex-col items-center justify-center">
						<Image src={jyotigramaya} class="w-full h-auto group-hover:blur-xl duration-300" alt=""/>
						<div class="absolute flex flex-col gap-2 items-center justify-center translate-y-10 group-hover:translate-y-0 duration-300 opacity-0 group-hover:opacity-100">
							<span class="font-satoshi text-white text-3xl">
								Jyotigramaya
							</span>
							<span class="font-satoshi text-white text-xl">
								2016
							</span>
						</div>
					</div>
					<div class="group relative overflow-hidden flex flex-col items-center justify-center">
						<Image src={noviceMonks} class="w-full h-auto group-hover:blur-xl duration-300" alt=""/>
						<div class="absolute flex flex-col gap-2 items-center justify-center translate-y-10 group-hover:translate-y-0 duration-300 opacity-0 group-hover:opacity-100">
							<span class="font-satoshi text-white text-3xl">
								Novice Monks
							</span>
							<span class="font-satoshi text-white text-xl">
								2016
							</span>
						</div>
					</div>
					<div class="group relative overflow-hidden flex flex-col items-center justify-center">
						<Image src={templeArt} class="w-full h-auto group-hover:blur-xl duration-300" alt=""/>
						<div class="absolute flex flex-col gap-2 items-center justify-center translate-y-10 group-hover:translate-y-0 duration-300 opacity-0 group-hover:opacity-100">
							<span class="font-satoshi text-white text-3xl">
								Temple Arts
							</span>
							<span class="font-satoshi text-white text-xl">
								2019
							</span>
						</div>
					</div>
				</div>						
			</div>
		</div>
		
	</main>
</Layout>

